{% extends 'base.html.twig' %}

{% block title %}Epic Games Collection{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-center my-5"> {{ game.title}} </h1>
    <a href="{{path('games-list')}}" class="mb-4">Retour</a>
<div>
<p class="text-center">{{game.editor}}</p>
<p class="text-center">{{game.gender}}</p>
{# <p class="text-center">{{game.year}}</p> #}
<img src="{{ asset ('images/' ~ game.picture) }}" alt="image du jeu" width="220" height="250" class="rounded mx-auto d-block"></br>
<p class="text-center">{{game.title}}</p>

</div>


</div>
{% endblock %}
